pipeline {
   agent any

   tools {
  maven 'Maven 3.6.3'
}

   stages {
     
     stage('code checkout') {
        steps {
        git credentialsId: 'git', url: 'https://github.com/Devops2272/New-Maven-Branch.git'
        
        }
     }
   
     stage('Generate Build Artifact') {
        steps {
        sh 'mvn clean package'
        
        }
     }
   
      /*stage('Sonar scan') {
        steps {
        sh 'mvn sonar:sonar'
        
        }
     }*/
    
   stage('Deploye to Nexus') {
  steps {
    sh 'mvn deploy'
    nexusArtifactUploader credentialsId: 'Nexus', groupId: 'com.mt', nexusUrl: 'localhost:8085/', nexusVersion: 'nexus3', protocol: 'http', repository: 'http://localhost:8085/repository/Maven-Java-Project-Snapshot/', version: '2.0-SNAPSHOT'
  }

  post {
    always {
      cleanWs cleanWhenNotBuilt: false, notFailBuild: true
    }
  }
}

   
}

}
